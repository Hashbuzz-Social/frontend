# Hashbuzz Frontend Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Hedera Network Configuration
VITE_NETWORK=testnet                          # hedera network (testnet/mainnet/previewnet)
VITE_HEDERA_NETWORK_TYPE=testnet             # Network type for Hedera SDK
VITE_HEDERA_NETWORK_NODES=0.testnet.hedera.com:50211  # Hedera network nodes

# Default Hedera Account (for testing - never use in production)
VITE_HEDERA_ACCOUNT_ID=0.0.123456            # Your Hedera account ID
VITE_HEDERA_PRIVATE_KEY=                     # Your private key (DEV ONLY - never commit)

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Backend API Configuration
VITE_BASE_URL=http://localhost:5000          # Backend API base URL
VITE_API_VERSION=v1                          # API version
VITE_API_TIMEOUT=10000                       # API request timeout in milliseconds

# API Endpoints (if different from base URL)
VITE_AUTH_API_URL=http://localhost:5000/api/v1/auth
VITE_CAMPAIGN_API_URL=http://localhost:5000/api/v1/campaigns
VITE_ADMIN_API_URL=http://localhost:5000/api/v1/admin

# =============================================================================
# SOCIAL MEDIA INTEGRATION
# =============================================================================

# Twitter/X Integration
VITE_TWITTER_REDIRECT_URL=http://localhost:3000/auth/twitter
VITE_TWITTER_CLIENT_ID=                      # Twitter OAuth client ID
VITE_TWITTER_CALLBACK_URL=http://localhost:3000/callback/twitter

# Instagram Integration
VITE_INSTAGRAM_REDIRECT_URL=http://localhost:3000/auth/instagram
VITE_INSTAGRAM_CLIENT_ID=                    # Instagram OAuth client ID
VITE_INSTAGRAM_CALLBACK_URL=http://localhost:3000/callback/instagram

# LinkedIn Integration
VITE_LINKEDIN_REDIRECT_URL=http://localhost:3000/auth/linkedin
VITE_LINKEDIN_CLIENT_ID=                     # LinkedIn OAuth client ID

# TikTok Integration
VITE_TIKTOK_REDIRECT_URL=http://localhost:3000/auth/tiktok
VITE_TIKTOK_CLIENT_KEY=                      # TikTok OAuth client key

# =============================================================================
# FIREBASE CONFIGURATION
# =============================================================================

# Firebase Project Configuration
VITE_FIREBASE_API_KEY=                       # Firebase API key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef123456

# Firebase Analytics (optional)
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# =============================================================================
# WALLET CONFIGURATION
# =============================================================================

# WalletConnect Configuration
VITE_WALLET_CONNECT_PROJECT_ID=              # WalletConnect Cloud project ID
VITE_WALLET_CONNECT_RELAY_URL=wss://relay.walletconnect.com

# HashConnect Configuration
VITE_HASHCONNECT_APP_NAME=Hashbuzz
VITE_HASHCONNECT_APP_DESCRIPTION=Decentralized Social Media Platform
VITE_HASHCONNECT_APP_ICON=https://your-domain.com/icon.png
VITE_HASHCONNECT_APP_URL=https://your-domain.com

# Wallet Features
VITE_ENABLE_WALLET_CONNECT=true              # Enable WalletConnect support
VITE_ENABLE_HASHPACK=true                    # Enable HashPack wallet
VITE_ENABLE_BLADE_WALLET=true               # Enable Blade wallet
VITE_ENABLE_METAMASK=false                   # Enable MetaMask (for testing)

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Development Features
VITE_ENABLE_DEV_TOOLS=true                   # Enable Redux DevTools
VITE_ENABLE_DEBUG_LOGS=true                  # Enable console debug logs
VITE_ENABLE_HOT_RELOAD=true                  # Enable Vite HMR
VITE_ENABLE_ERROR_OVERLAY=true               # Show error overlay in dev

# Production Features
VITE_ENABLE_ANALYTICS=false                  # Enable Google Analytics
VITE_ENABLE_ERROR_REPORTING=false            # Enable error reporting (Sentry)
VITE_ENABLE_PERFORMANCE_MONITORING=false     # Enable performance monitoring

# Experimental Features
VITE_ENABLE_NEW_DASHBOARD=false              # Enable new dashboard design
VITE_ENABLE_ADVANCED_FILTERING=false         # Enable advanced campaign filtering
VITE_ENABLE_REAL_TIME_UPDATES=false          # Enable real-time notifications

# =============================================================================
# UI/UX CONFIGURATION
# =============================================================================

# Theme Configuration
VITE_DEFAULT_THEME=light                     # Default theme (light/dark/system)
VITE_ENABLE_THEME_SWITCHING=true             # Allow users to switch themes
VITE_PRIMARY_COLOR=#1976d2                   # Primary brand color
VITE_SECONDARY_COLOR=#dc004e                 # Secondary accent color

# Layout Configuration
VITE_SIDEBAR_DEFAULT_COLLAPSED=false         # Default sidebar state
VITE_ENABLE_MOBILE_OPTIMIZATIONS=true       # Enable mobile-specific optimizations
VITE_ENABLE_PWA=false                        # Enable Progressive Web App features

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Content Security Policy
VITE_CSP_ENABLED=true                        # Enable CSP headers
VITE_ALLOWED_DOMAINS=localhost,*.hashbuzz.com # Allowed domains for resources

# CORS Configuration
VITE_CORS_ORIGINS=http://localhost:3000,http://localhost:5173
VITE_CORS_CREDENTIALS=true                   # Allow credentials in CORS

# Rate Limiting
VITE_RATE_LIMIT_ENABLED=true                 # Enable client-side rate limiting
VITE_MAX_REQUESTS_PER_MINUTE=60              # Max API requests per minute

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Caching Configuration
VITE_ENABLE_SERVICE_WORKER=false             # Enable service worker caching
VITE_CACHE_DURATION=3600000                  # Cache duration in milliseconds (1 hour)
VITE_ENABLE_MEMORY_CACHE=true               # Enable in-memory caching

# Bundle Configuration
VITE_ENABLE_CODE_SPLITTING=true              # Enable dynamic imports
VITE_CHUNK_SIZE_WARNING_LIMIT=500            # Warn for chunks larger than 500kb
VITE_ENABLE_TREE_SHAKING=true               # Enable tree shaking

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Sentry Configuration (Error Reporting)
VITE_SENTRY_DSN=                             # Sentry DSN for error reporting
VITE_SENTRY_ENVIRONMENT=development          # Environment name for Sentry
VITE_SENTRY_SAMPLE_RATE=1.0                 # Error sampling rate (0.0 - 1.0)

# Google Analytics
VITE_GA_TRACKING_ID=                         # Google Analytics tracking ID
VITE_GA_ANONYMIZE_IP=true                    # Anonymize IP addresses

# Custom Logging
VITE_LOG_LEVEL=info                          # Log level (debug/info/warn/error)
VITE_ENABLE_CONSOLE_LOGS=true                # Enable console logging
VITE_LOG_API_REQUESTS=false                  # Log all API requests

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Server
VITE_DEV_PORT=5173                           # Development server port
VITE_DEV_HOST=0.0.0.0                        # Development server host
VITE_DEV_HTTPS=false                         # Enable HTTPS in development

# SSL Configuration (for HTTPS development)
VITE_SSL_CERT_PATH=./certificates/cert.pem   # SSL certificate path
VITE_SSL_KEY_PATH=./certificates/key.pem     # SSL private key path

# Mock Data
VITE_USE_MOCK_DATA=false                     # Use mock data instead of API
VITE_MOCK_DELAY=1000                         # Artificial delay for mock responses

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Build Configuration
VITE_BUILD_SOURCE_MAP=false                  # Generate source maps for production
VITE_BUILD_ANALYZE=false                     # Analyze bundle size after build
VITE_PUBLIC_PATH=/                           # Public path for assets

# CDN Configuration
VITE_CDN_URL=                                # CDN URL for static assets
VITE_ENABLE_CDN=false                        # Use CDN for static assets

# Version Information
VITE_APP_VERSION=2.0.0                       # Application version
VITE_BUILD_DATE=                             # Build date (auto-generated)
VITE_GIT_COMMIT=                             # Git commit hash (auto-generated)

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test Environment
VITE_TEST_API_URL=http://localhost:5001      # API URL for testing
VITE_TEST_TIMEOUT=5000                       # Test timeout in milliseconds
VITE_ENABLE_TEST_UTILITIES=false             # Enable test helper utilities

# =============================================================================
# NOTES
# =============================================================================

# 1. Never commit the actual .env file to version control
# 2. Keep sensitive values (API keys, private keys) secure
# 3. Use different values for different environments (dev/staging/prod)
# 4. Restart the development server after changing environment variables
# 5. Prefix all custom variables with VITE_ to make them available in the browser
# 6. Boolean values should be 'true' or 'false' as strings
# 7. Use absolute URLs for external services
# 8. Test your configuration in different environments before deploying
